<!-- Модалка -->
<div id="authModal" class="modal hidden">
    <div class="modal-content">
        <span class="close">&times;</span>

        <h2 id="formTitle">Вхід</h2>

        <!-- Форма входу/реєстрації -->
        <form id="authForm">
            <!-- ім'я (тільки для реєстрації) -->
            <div class="form-group reg-only hidden">
                <input type="text" name="name" placeholder="Ім'я"
                       pattern="[A-Za-zА-Яа-яйо0-9_ ]{3,20}"
                       title="Тільки літери, цифри та підкреслення (3–20 символів)">
            </div>

            <!-- email -->
            <div class="form-group">
                <input type="email" name="email" placeholder="Email" required>
            </div>

            <!-- пароль -->
            <div class="form-group avatar">
                <input type="password" name="password" placeholder="Пароль" minlength="3" required>
                <img src="/uploads/avatars/default.png" alt="" id="avatara">
                <input type="file" name="avatar" id="avatar">
            </div>

            <!-- підтвердження пароля (тільки для реєстрації) -->
            <div class="form-group reg-only hidden">
                <input type="password" name="password_confirmation" placeholder="Підтвердіть пароль" minlength="3">
            </div>

            <button type="submit" id="submitBtn">Увійти</button>

            <div class="form-footer">
                <a href="#" id="toggleForm">Немає облікового запису? Реєстрація</a>
                <br>
                <a href="#" id="forgotPassword">Забули пароль?</a>
            </div>
        </form>

        <!-- Форма скидання пароля -->
        <form id="resetForm" class="hidden">
            <div class="form-group">
                <input type="email" name="reset_email" placeholder="Ваш Email" required>
            </div>

            <div class="form-group">
                <input type="password" name="new_password" placeholder="Новий пароль" minlength="3" required>
            </div>

            <div class="form-group">
                <input type="password" name="new_password_confirmation" placeholder="Підтвердіть пароль" minlength="3" required>
            </div>

            <button type="submit" id="submitBtn2">Оновити пароль</button>

            <div class="form-footer">
                <a href="#" id="backToLogin">Повернутися до входу</a>
            </div>
        </form>
    </div>
</div>
